{
  "version": 2,
  "name": "light-vercel",
  "public": true,
  "builds": [
    {
      "src": "routes/**/*.js",
      "use": "@now/node",
      "config": {
        "includeFiles": [
          "light.config.js"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "routes/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "routes/$1.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "LIGHT_ENV": "now"
  }
}
